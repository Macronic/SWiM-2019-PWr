<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/timerTextView" android:layout_alignParentStart="true"
            android:layout_marginStart="20dp" android:layout_alignParentTop="true"
            android:typeface="monospace"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" android:layout_centerVertical="true"
            android:id="@+id/progressBar" android:layout_marginBottom="1dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="14dp" android:progress="100"
            android:max="100" android:layout_marginStart="290dp"/>
</RelativeLayout>