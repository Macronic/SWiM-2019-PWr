<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".RunTimerActivity"
              android:id="@+id/linearLayout" android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/timerTitle"
            android:gravity="center"
            android:layout_weight="0.3"
            android:theme="@style/AppTheme.Title" tools:text="Cos"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/timerTime"
            android:layout_weight="0.3"
            android:theme="@style/AppTheme.Title" tools:text="czas"/>

</LinearLayout>